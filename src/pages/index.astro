---
import Layout from '@/layouts/Layout.astro';

import AboutMe from '@/components/AboutMe.astro';
import Badge from '@/components/Badge.astro';
import Briefcase from '@/components/icons/Briefcase.astro';
import CodeIcon from '@/components/icons/Code.astro';
import Experience from '@/components/Experience.astro';
import GitHubIcon from '@/components/icons/GitHub.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import MailIcon from '@/components/icons/Mail.astro';
import ProfileCheck from '@/components/icons/ProfileCheck.astro';
import Projects from '@/components/Projects.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import SocialPill from '@/components/SocialPill.astro';
---

<Layout icon="/srgobi.webp" title="Shreyan" description="">
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<img class="rounded-full size-12 mb-4" src="/srgobi.webp" alt="srgobi logo" />
			<h1 class="text-zinc-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
				Hey, I am Shreyan <a href="https://www.linkedin.com/in/shreyan-manher-807a0a218/" target="_blank" rel="noopener" class="flex justify-center items-center hover:scale-105 transition">
					<Badge>Available to Work</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white">
				<span>Dedicated problem solver.</span><span class="text-yellow-800 dark:text-yellow-200"> innovator </span>
				.<span class="text-red-800 dark:text-red-200"> Chattisgarh, India</span>.
				<span class="text-sky-800 dark:text-sky-200">Versatile in all things CS, driven by a passion for AI, ML, and creating real-world impact.</span>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/shreyan-manher-807a0a218/">
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/shreyann7">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</SocialPill>
				<SocialPill href="mailto:shreyan0712@gmail.com">
					<MailIcon class="size-4 md:size-6" />
					shreyan0712@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<div class="space-y-24">
			<SectionContainer id="Internships">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/90 dark:text-white/90">
					<Briefcase class="size-7" />
					Internships
				</h2>
				<Experience />
			</SectionContainer>

			<SectionContainer id="Projects">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/90 dark:text-white/90">
					<CodeIcon class="size-7" />
					Projects
				</h2>
				<Projects />
			</SectionContainer>

			<SectionContainer id="About Me">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/90 dark:text-white/90">
					<ProfileCheck class="size-7" />
					About Me
				</h2>
				<AboutMe />
			</SectionContainer>
		</div>
	</main>
</Layout>
